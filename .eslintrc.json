{
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "globals": {
      "allTasks": true,
      "dayOfWeek": true,
      "dayOfMonth": true,
      "colorChanger": true,
      "checkLocalStorage": true,
      "updateDate": true,
      "moment": true,
      "uniqueTasksNames": true,
      "NumberOfDaysThisMonth": true,
      "writeToLocalStorage": true,
      "Task": true
    },
    "rules": {
      "eqeqeq": ["error", "always"],
      "no-console": "off",
      "no-undefined": "off",
      "indent": ["error", 2],
      "quotes": ["warn", "single"],
      "no-multi-spaces": [
        "warn",
        {
          "exceptions": {
            "VariableDeclarator": true
          }
        }
      ],
      "no-trailing-spaces": "warn",
      "new-cap": "warn",
      "no-redeclare": [
        "error",
        {
          "builtinGlobals": true
        }
      ],
      "semi": [2, "always"]
    }
  }